<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151116"
    tools:context=".Downstairs">

    <EditText
        android:id="@+id/txtConverse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="46dp"
        android:ems="10"
        android:hint="Talk to your neighbor:"
        android:textColor="#800000"
        android:inputType="text"
        android:padding="10dp"
        android:textColorHint="#800000"
        android:textSize="28dp"
        app:layout_constraintBottom_toTopOf="@+id/btnRespond"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="10dp"
        android:padding="7dp"
        android:text="Hey You!"
        android:textColor="#800000"
        android:textSize="32dp"
        app:layout_constraintBottom_toTopOf="@+id/txtDialogue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="103dp"
        app:layout_constraintBottom_toTopOf="@+id/btnRespond"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDialogue"
        app:srcCompat="@drawable/buddy" />

    <Button
        android:id="@+id/btnRun"
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#151116"
        android:text="Run"
        android:textColor="#800000"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRespond" />

    <Button
        android:id="@+id/btnRespond"
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:layout_marginBottom="19dp"
        android:backgroundTint="#151116"
        android:text="Continue the conversation"
        android:textColor="#800000"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/btnRun"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/txtDialogue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="100dp"
        android:text=" "
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:padding="5dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>